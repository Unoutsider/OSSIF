<h2 align="center">Предложить задание</h2>

<%= form_with url: 'offer_create', method: :post do |form| %>
	<p>
		<%= form.label 'Название задания', class: 'form-label' %>
		<%= form.text_field :name, placeholder: 'Название', class: 'form-control', id: 'name' %>
	</p>

  <p>
		<%= form.label 'Сфера развития', class: 'form-label' %>
		<%= form.text_field :sphere, placeholder: 'Вводить как speech или productivity или sleep или nutrition', class: 'form-control', id: 'sphere' %>
	</p>
	<p>
		<%= form.label 'Класс задания', class: 'form-label' %>
		<%= form.number_field :task_class, placeholder: 'Номер от 1 до 6', class: 'form-control', id: 'task_class' %>
	</p>
  <p>
		<%= form.label 'Описание', class: 'form-label' %>
		<%= form.text_field :description, placeholder: 'Описание', class: 'form-control', id: 'description' %>
	</p>
  <p>
		<%= form.label 'Ответ 1', class: 'form-label' %>
		<%= form.text_field :answer_1, placeholder: 'Вариант 1', class: 'form-control', id: 'answer_1' %>
	</p>
  <p>
		<%= form.label 'Ответ 2', class: 'form-label' %>
		<%= form.text_field :answer_2, placeholder: 'Вариант 2', class: 'form-control', id: 'answer_2' %>
	</p>
  <p>
		<%= form.label 'Ответ 3', class: 'form-label' %>
		<%= form.text_field :answer_3, placeholder: 'Вариант 3', class: 'form-control', id: 'answer_3' %>
	</p>
  <p>
		<%= form.label 'Стоимость ответа 1', class: 'form-label' %>
		<%= form.number_field :answer_1_cost, placeholder: '1, 3 или 5 (стоимости не могут повторяться)', class: 'form-control', id: 'answer_1_cost' %>
	</p>
  <p>
		<%= form.label 'Стоимость ответа 2', class: 'form-label' %>
		<%= form.number_field :answer_2_cost, placeholder: '1, 3 или 5 (стоимости не могут повторяться)', class: 'form-control', id: 'answer_2_cost' %>
	</p>
  <p>
		<%= form.label 'Стоимость ответа 3', class: 'form-label' %>
		<%= form.number_field :answer_3_cost, placeholder: '1, 3 или 5 (стоимости не могут повторяться)', class: 'form-control', id: 'answer_3_cost' %>
	</p>
	<p>
		<%= form.submit 'Отправить', class: 'btn btn-primary' %>
	</p>
<% end %>
